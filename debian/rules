#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1
export DH_OPTIONS=-v

include /usr/share/dpkg/pkg-info.mk

%:
	dh $@

.PHONY: override_dh_auto_configure
override_dh_auto_configure:
	dh_auto_configure -- -Dsway_version=$(DEB_VERSION_UPSTREAM)

.PHONY: override_dh_missing
override_dh_missing:
	dh_missing --fail-missing -Xusr/share/zsh/site-functions/_swaygrab
